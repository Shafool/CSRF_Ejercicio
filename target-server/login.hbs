  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="title">
        <p>Inicia Sesión</p>
      </div>
      <form id="form-login" action="/login" method="POST">
        <div class="form-inputs">
          <p>
            <input name="email" class="form-control" type="email" placeholder="Correo">
          </p>
          <p>
            <input name="password" class="form-control" type="password" placeholder="Contraseña">
          </p>
        </div>
        <input type="submit" value="Iniciar Sesión" id="btn-submit">
      </form>
    </div>
  </div>
</body>



